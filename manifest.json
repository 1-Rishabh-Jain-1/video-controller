{
    "manifest_version": 3,
    "name": "Video Speed & Seek Controller",
    "version": "1.0.0",
    "description": "Control HTML video playback with keyboard + React widget.",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injectReact.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "storage"
    ]
}